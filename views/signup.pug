extends base

block content
    main.main.main-signup
        .signup-form 
            h2.heading-secondary.ma-bt-lg Sign up
            form.form.form--signup
                .form__group
                    label.form__label(for='name') Your name
                    input#name.form__input(type='text', placeholder='tour name', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    a.alrady-have-acount-signup(href='/login') Already have an acount
                .form__group
                    button.btn.btn--blue Sign up